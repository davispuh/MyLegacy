<UserControl x:Class="Game.Prompt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="192*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="131*" />
            <RowDefinition Height="169*" />
        </Grid.RowDefinitions>
        <PasswordBox Height="26" HorizontalAlignment="Left" Name="Password" VerticalAlignment="Bottom" Width="141" Margin="10,0,0,0" Grid.Column="1" />
        <Button Content="Apstiprināt" Height="32" HorizontalAlignment="Left" Margin="150,20,0,0" Name="Submit" VerticalAlignment="Top" Width="109" Click="Submit_Click" Grid.ColumnSpan="2" Grid.Row="1" />
        <Label Content="Ievadi paroli:" Name="PasswordLabel" Width="90" HorizontalAlignment="Right" HorizontalContentAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,0" Grid.Row="0" Grid.Column="0"/>
    </Grid>
</UserControl>
